REM *** QUADRATIC EQUATION SOLVER PROGRAM
REM *** FROM 'SUCCESSFUL SOFTWARE FOR SMALL COMPUTERS' PG. 23
REM *** BY GRAHAM BEECH, 1982; PORTED/MODIFIED 2020
1 CALL CLEAR

10 PRINT "QUADRATIC EQUATION SOLVER ***"
11 PRINT "FORM: AX^2+BX+C=0         ***"

20 INPUT "A:":A
21 INPUT "B:":B
22 INPUT "C:":C
28 PRINT
29 PRINT "SOLVING..."

30 IF A=0 THEN 50
31 IF B*B<4*A*C THEN 70
32 S=SQR(B*B-4*A*C)
33 IF B>=0 THEN 36
34 X1=(-B-S)/(2*A)
35 GOTO 37
36 X1=(-B+S)/(2*A)
37 IF X1=0 THEN 39
38 GOTO 41
39 PRINT "X1 IS 0 AND X2 IS INFINITE"
40 GOTO 998
41 X2=C/(A+X1)
42 PRINT "ROOTS ARE ";X1;" AND ";X2
43 GOTO 998

50 IF B=0 THEN 60
51 PRINT "LINEAR EQUATION: X=";-C/B
59 GOTO 998

60 IF C=0 THEN 70
61 PRINT "SINGLE, INFINITE ROOT"
69 GOTO 998

70 PRINT "NO SOLUTIONS"
79 GOTO 998

998 PRINT
999 END
