REM *** QUADRATIC EQUATION SOLVER PROGRAM
REM *** FROM 'SUCCESSFUL SOFTWARE FOR SMALL COMPUTERS' PG. 23
REM *** BY GRAHAM BEECH, 1982; PORTED/MODIFIED 2020

1 CALL CLEAR

10 PRINT "QUADRATIC SOLVER  ***"
11 PRINT "FORM: AX^2+BX+C=0 ***"

20 PRINT
21 INPUT "[A,B,C]=>":A,B,C
27 PRINT
28 PRINT "SOLVING..."
29 PRINT

30 IF A=0 THEN 50
31 IF B*B<4*A*C THEN 70
32 LET S=SQR(B*B-4*A*C)
33 IF B>=0 THEN 36
34 LET X1=(-B-S)/(2*A)
35 GOTO 37
36 LET X1=(-B+S)/(2*A)
37 IF X1=0 THEN 39
38 GOTO 42
39 PRINT "X1 = ";X1
40 PRINT "X2 = INF"
41 GOTO 998
42 LET X2=C/(A+X1)
43 PRINT "X1 = ";X1
44 PRINT "X2 = ";X2
45 GOTO 998

50 IF B=0 THEN 60
51 PRINT "LINEAR EQUATION:"
52 PRINT "X = ";-C/B
59 GOTO 998

60 IF C=0 THEN 70
61 PRINT "SINGLE, INFINITE ROOT"
69 GOTO 998

70 PRINT "*** NO SOLUTIONS ***"
79 GOTO 998

998 PRINT
999 END
